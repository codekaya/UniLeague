<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASD</title>

    <script src="/js/register.js"></script>
</head>
    <html>

<body>
  <h2>Kayıt Formu</h2>
  
  <form id="registerForm" method="post">
    <label for="name">Ad:</label>
    <input type="text" id="name" name="ad" required><br><br>
    
    <label for="last_name">Soyad:</label>
    <input type="text" id="last_name" name="last_name" required><br><br>
    
    <label for="email">E-posta:</label>
    <input type="email" id="email" name="email" required><br><br>
    
    <label for="sifre">Şifre:</label>
    <input type="password" id="password" name="password" required><br><br>
    
    <label for="ogrenci">Üniversite Öğrencisi misiniz?</label><br>
    <input type="radio" id="evet" name="ogrenci" value="evet" required>
    <label for="evet">Evet</label><br>
    <input type="radio" id="hayir" name="ogrenci" value="hayir" required>
    <label for="hayir">Hayır</label><br><br>
   

    <label for="tarih">University</label>

    <select id="uni" name="uni_name" required>
            <option value="0">Uni Muni Yok</option>
        <% uni_id_title.forEach(element => { %>
            <option value="<%= element._id  %>"><%= element.title%></option>
            <% }) %>
    </select><br><br>

  </form>

  <button onclick="createRegForm()">Kayıt OL</button>
</body>



</html>

</html>

