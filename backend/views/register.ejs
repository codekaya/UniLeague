  <section class="py-5 mt-5">
    <div class="container py-5">
        <div class="row mb-5">
          <section class="vh-100" style="background-color: white;">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                  <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                      <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="images/login_image.jpg"
                          alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                      </div>
                      <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-white">
          
                          <form id="registerForm" class="login-form">
          
                            <div class="d-flex align-items-center mb-3 pb-1">
                              <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                              <span class="h1 fw-bold mb-0" style="color:black">Kayıt Ol</span>
                            </div>
          
                            <div class="form-outline mb-4">
                              <input
                name="Name"
                type="text"
                minlength=3
                maxlength=100
                placeholder="İsim"
                required
                id="form2Example17" 
                class="form-control form-control-lg"
              />
                            </div>
                            <div class="form-outline mb-4">
                              <input
                name="Surname"
                type="text"
                minlength=3
                maxlength=100
                placeholder="Soyisim"
                class="form-control form-control-lg"
                id="form2Example17" 
                required
              />
          
                            </div>
                            <div class="form-outline mb-4">
                              <input
                name="Email"
                type="email"
                placeholder="e-posta"
                required
                class="form-control form-control-lg"
                id="form2Example17" 
              />
                            </div>
                            <div class="form-outline mb-4">
                              <input
                name="Password"
                type="password"
                placeholder="Şifre"
                required
                class="form-control form-control-lg"
                id="form2Example17" 
              />
                            </div>
                            <div class="form-outline mb-4">
                              <input
                name="ConfirmPassword"
                type="password"
                placeholder="Şifreyi onayla"
                required
                class="form-control form-control-lg"
                id="form2Example17"
              />
                            </div>
                            <div class="form-outline mb-4">
                              <span>Üniversite öğrencisi misin?&emsp;</span>
                <label><input type="radio" name="student" value="yes" required> Evet&emsp;</label>
                <label><input type="radio" name="student" value="no"> Hayır</label>
                            </div>
                            <div class="form-outline mb-4">
                              <select id="uni" name="uni_name" class="register-input" required>
                                <option value="0">Üniversiteni Seç</option>
                            <% uni_id_title.forEach(element => { %>
                                <option value="<%= element._id  %>"><%= element.title%></option>
                                <% }) %>
                        </select>
                            </div>
                            <div class="pt-1 mb-4">
                              <button class="btn btn-dark btn-lg btn-block login-button" type="submit">Kayıt Ol</button>
                            </div>
                            <div id="error-container">
                
                              </div>
                            </div>
                  
                          </form>
          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <footer class="py-2 bg-dark text-light fixed-bottom">
            <div class="container text-center">
